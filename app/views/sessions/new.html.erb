<% provide(:title, '主页') %>
 
<% if logged_in? %>
  

<% else %>

      <body>
          <div id="loginbox">  
              <div class="control-group normal_text"> 
                  <h2 style="color:#B2DFEE;font-size:28px;">亿游信息管理系统</h2>
                  <span style="font-size:14px;color:gray;">版权所有 亿游在线 2015-2016</span>
              </div>          
                  <% flash.each do |key, value| %>
                      <div class="alert alert-<%= key %>"><%= value %></div>
                  <% end %>

              <%= form_for(:session, url: login_path, id: "loginform", class: "form-vertical" ) do |f| %>
                              <div class="control-group">
                                  <label class="control-label">登陆账号</label>
                                  <div class="controls">
                                    <div class="main_input_box">
                                      <span class="add-on bg_lg">
                                        <i class="icon-user" style="font-size:16px;">
                                        </i>
                                      </span>
                                        <%= f.text_field :name, placeholder: "帐号" %>
                                    </div>
                                  </div>
                              <div>i

                              <div class="control-group2">
                                <label class="control-label">登陆密码</label>
                                <div class="controls">
                                    <div class="main_input_box">
                                    <span class="add-on bg_ly"><i class="icon-lock" style="font-size:16px;"></i></span>
                                      <%= f.password_field :password, placeholder: "密码" %>
                                 </div>
                              </div>
                             </div>
                                 <%= f.label :remember_me, class: "checkbox inline" do %>
                                   <%= f.check_box :remember_me %>
                                  <span>自动登录</span>
                                 <% end %>

                                 <span class="pull-right">
                                  <%= f.submit " 登        录", class: "btn btn-success", style: "width:335px;", id: "checkBtn" %>
                                 </span>
                              <div class="control-group normal_text">
                                <div style="font-size:14px;color:gray;">推荐使用webkit内核浏览器，如chrome等</div>
                              </div>
              <% end %>

          </div>
          
          <script src="/assets/jquery.min.js"></script>  
          <script src="/assets/matrix.login.js"></script> 
<% end %>